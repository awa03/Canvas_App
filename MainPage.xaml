<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Canvas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="40"
            VerticalOptions="Center">
            <Image Source="canvas_logo.png" HeightRequest="185" Aspect="AspectFit"></Image>
            <Button Text="Student" Clicked="StudentClicked"></Button>
            <Button Text="Instructor" Clicked="InstructorClicked"></Button>
            <Label Text="This project is intended to serve as a replica of canvas funcitonality, and has no affiliation with the canvas project."
            FontSize="Micro" VerticalOptions="End" HorizontalOptions="Center"></Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
